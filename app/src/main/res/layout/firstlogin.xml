<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">



   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/Relative"
       android:layout_centerInParent="true">
       <Button
           android:id="@+id/img_google"
           android:layout_width="200dp"
           android:layout_height="40dp"
           android:background="@drawable/google_rounded"
           android:padding="10dp"
           android:text="الدخول بحساب جوجل"
           android:textColor="#000"
           android:layout_centerHorizontal="true"
           android:drawableLeft="@drawable/ic_google" />
       <Button
           android:id="@+id/img_face"
           android:layout_width="200dp"
           android:layout_height="40dp"
           android:background="@drawable/face_rounded"
           android:layout_centerHorizontal="true"
           android:padding="10dp"
           android:textColor="#000"
           android:layout_below="@+id/img_google"
           android:layout_marginTop="@dimen/_20sdp"
           android:drawablePadding="@dimen/_5sdp"
           android:text="الدخول بحساب فيسبوك"
           android:drawableLeft="@drawable/ic_facebook" />




   </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/headtree"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/Relative"
        android:layout_marginBottom="@dimen/_40sdp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Relative"
        android:text="أو"
        android:textSize="@dimen/_18sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="#000"
        android:id="@+id/aw"
        />
    <Button
        android:layout_width="@dimen/_180sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="انشاء حساب بالايميل"
        android:id="@+id/loginface"
        android:textColor="#fff"
        android:textSize="@dimen/_15sdp"
        android:background="@drawable/btncreate"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/loginface">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ادخل الان "
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="#000"
            android:layout_weight="1"
            android:id="@+id/seclogin"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="هل انت عضو ؟ "
        android:textSize="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="#000"
        android:id="@+id/secondlogin"
        android:layout_weight="1"
        android:gravity="end"

        />

        </LinearLayout>

</RelativeLayout>