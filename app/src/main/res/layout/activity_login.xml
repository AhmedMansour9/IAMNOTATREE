<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="iamnottree.iamnotatree.Activites.Login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="الدخول الي حسابك "
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:id="@+id/Create"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/Create"
        android:id="@+id/create"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_height="wrap_content"
        >
        <EditText android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:gravity="right"
            android:textColorHint="#000"
            android:textSize="14sp"
            android:textColor="@android:color/black"

            android:hint="الايميل " />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            >
            <EditText android:id="@+id/descrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:gravity="right"
                android:textColorHint="#000"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:hint="الباسورد " />

        </android.support.design.widget.TextInputLayout>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Createemail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="دخول"
        android:id="@+id/signin"
        android:textColor="#fff"
        android:textSize="@dimen/_20sdp"
        android:background="@drawable/btncreate"
        />
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/create"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/linear"
        android:orientation="horizontal">

    <Button
        android:id="@+id/img_face"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/face_rounded"
        android:padding="10dp"
        android:textColor="#000"
        android:drawablePadding="@dimen/_5sdp"
        android:text="فيسبوك"
        android:layout_marginTop="@dimen/_20sdp"
        android:drawableLeft="@drawable/ic_facebook" />


    <Button
        android:id="@+id/img_google"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/google_rounded"
        android:padding="10dp"
        android:text="جوجل"
        android:textColor="#000"
        android:layout_marginTop="@dimen/_20sdp"
        android:drawableLeft="@drawable/ic_google" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="او انشئ حساب الان"
        android:textColor="#000"
        android:textSize="@dimen/_15sdp"
        android:layout_below="@+id/linear"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/Createemail"
        />

</RelativeLayout>
